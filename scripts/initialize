<?php
/**
* Init craft project
* 1. Deduct name from path
* 2. Replace name into configuration
* 3. Install NPM components
*/

$pathParts = explode('/', __DIR__);
array_pop($pathParts);

$name = array_pop($pathParts);

function template($template, $context) {
    $search = array_map(function($n) {
        return '{{' . $n . '}}'
    }, $context);
    $replace = array_values($context);
    return str_replace($search, $replace, $template);
}
